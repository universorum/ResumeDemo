@model ResumeDemo.Models.Resume

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Resume</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Experiences)
        </dt>
        @foreach (var experience in Model.Experiences)
        {
            <dd class="col-sm-10">
                <dl class="row">
                    <dt>
                        @Html.DisplayNameFor(_ => experience.Company)
                    </dt>
                    <dd>
                        @Html.DisplayFor(_ => experience.Company)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(_ => experience.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(_ => experience.Title)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(_ => experience.Start)
                    </dt>
                    <dd>
                        @Html.DisplayFor(_ => experience.Start)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(_ => experience.End)
                    </dt>
                    <dd>
                        @Html.DisplayFor(_ => experience.End)
                    </dd>
                </dl>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>